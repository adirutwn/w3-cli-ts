{
  "compilerOptions": {
    "strict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "types": ["@types/node"],
    "rootDir": ".",
    "skipLibCheck": true,
    "outDir": "dist",
  },
  "exclude": ["node_modules"],
}